{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./",
        "target": "es2015",
        "declaration": true,
        "sourceMap": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "jasmine",
            "node"
        ]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "*.d.ts",
        "**.d.ts",
        "./node_modules/*"
    ]
}
